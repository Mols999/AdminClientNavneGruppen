<Window x:Class="NavnegruppenAdmin.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NavnegruppenAdmin"
        mc:Ignorable="d"
        Title="Login - Admin Dashboard" Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Admin Dashboard Login" FontSize="22" FontWeight="Bold" Foreground="#3b5998" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <TextBox x:Name="UsernameTextBox" Margin="0,10,0,0" Height="35" Padding="5" BorderThickness="1" BorderBrush="#ccd0d5"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,10,0,0" Height="35" Padding="5" BorderThickness="1" BorderBrush="#ccd0d5"/>

            <Button Content="Login" Background="#3b5998" Foreground="White" Height="35" BorderThickness="0" Margin="0,20,0,0" Click="LoginButton_Click"/>

            <TextBlock x:Name="ErrorMessage" Foreground="Red" HorizontalAlignment="Center" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
